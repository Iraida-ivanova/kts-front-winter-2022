{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "store/*": ["store/*"],
      "shared/*": ["shared/*"],
      "root/*": ["root/*"],
      "App/*": ["App/*"]
    },
    "target": "es6",
    "allowJs": true,
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "./typings.d.ts"
  ],
  "exclude": ["node_modules"]
}